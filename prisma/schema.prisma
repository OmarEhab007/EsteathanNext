// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Student {
  id           String   @id @default(cuid()) @map("_id")
  number       String
  name         String
  class        String
  year         String
  parentNumber String
  schoolId     String
  requestCount Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([number, schoolId])
}

// teacher model id, name, phone
model Teacher {
  id        String   @id @default(cuid()) @map("_id")
  name      String
  phone     String   @unique
  schoolId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// form for student {id, studentId, reason, attachment, parentNumber, verficationCode, status, approval, createdAt, updatedAt}
model Form {
  id               String   @id @default(cuid()) @map("_id")
  studentId        String
  reason           String
  attachment       String
  parentNumber     String
  verificationCode String
  status           String
  approval         String
  schoolId         String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model school {
  id                    String   @id @default(cuid()) @map("_id")
  schoolId              String   @unique
  name                  String
  district              String
  office                String
  phone                 String
  subscriptionId        String
  maxRequestsPerStudent Int      @default(5) // New field with default value
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model subscription {
  id        String   @id @default(cuid()) @map("_id")
  status    String
  plan      String
  startDate DateTime
  endDate   DateTime
  schoolId  String
  billId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model plan {
  id        String   @id @default(cuid()) @map("_id")
  name      String
  price     Int
  duration  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model bill {
  id          String   @id @default(cuid()) @map("_id")
  status      String
  schoolId    String
  schoolName  String
  managerName String
  phone       String
  district    String
  office      String
  attachment  String
  plan        String
  history     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model user {
  id        String   @id @default(cuid()) @map("_id")
  name      String
  password  String
  role      String
  schoolId  String
  phone     String
  status    String
  lastLogin DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
